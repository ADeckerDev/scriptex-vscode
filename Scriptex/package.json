{
  "name": "Scriptex",
  "displayName": "scriptex-vscode",
  "description": "Extension for Scriptex, a latex inspired protocol for generating scripts in HTML",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Scriptex.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "scriptex",
        "aliases": ["Scriptex", "scriptex"],
        "extensions": [".sctx"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "scriptex",
        "scopeName": "source.scriptex",
        "path": "./syntaxes/scriptex.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scriptexContainer",
          "title": "Scriptex",
          "icon": "images/scriptex-icon.svg"
        }
      ]
    },
    "views": {
      "scriptexContainer": [
        {
          "id": "scriptexView",
          "name": "Scriptex Tools"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
